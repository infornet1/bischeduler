# BiScheduler Environment Configuration Template
# Copy to .env and update with your specific values

# Flask Environment
FLASK_ENV=development
FLASK_APP=manage.py

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Master Database Configuration
MASTER_DATABASE_URL=mysql+pymysql://username:password@localhost/bischeduler_master

# Development Database
DEV_DATABASE_URL=mysql+pymysql://username:password@localhost/bischeduler_dev

# Production Database (production only)
DATABASE_URL=mysql+pymysql://username:password@localhost/bischeduler_prod

# Venezuelan Education Settings
DEFAULT_TIMEZONE=America/Caracas
BIMODAL_START_TIME=07:00
BIMODAL_END_TIME=14:20

# UEIPAB Specific Settings
INSTITUTION_NAME=UEIPAB
INSTITUTION_CODE=UEIPAB001
ADMIN_EMAIL=admin@ueipab.edu.ve

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Rate Limiting (Redis for production)
RATELIMIT_STORAGE_URL=memory://

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=DEBUG

# Optional: External Services
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: Monitoring
# SENTRY_DSN=your-sentry-dsn-here